{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "paths": {
            "ethers": [
                "./node_modules/ethers/lib.esm/index.d.ts"
            ],
            "ethers/*": [
                "./node_modules/ethers/lib.esm/*"
            ]
        },
        "lib": [
            "ES2022",
            "DOM"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "types": [
            "node",
            "express",
            "cors",
            "connect"
        ]
    },
    "exclude": [
        "node_modules",
        "*/dist"
    ]
}
